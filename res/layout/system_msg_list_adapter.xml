<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical">


        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:text="Message"
            android:layout_alignParentLeft="true"
            android:id="@+id/systemMsgItem"/>

         <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:layout_marginRight="10dp"
            android:text=""
            android:id="@+id/systemMsgItemInfo"
            android:textStyle="bold"
            android:background="@drawable/message_count"
            android:layout_alignParentRight="true"/>

         <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@android:color/darker_gray"
            android:text="2014-05-06 09:00:00"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/systemMsgItem"
            android:layout_below="@id/systemMsgItem"
            android:id="@+id/systemMsgItemDate"/>
    </RelativeLayout>

</LinearLayout>
